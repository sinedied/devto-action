{
  "name": "publish-devto",
  "version": "1.0.0",
  "description": "GitHub Action to publish markdown files as articles on on dev.to platform, with assets hosted on GitHub.",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/publish-devto.git"
  },
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "build": "ncc build index.js",
    "test": "xo",
    "release": "git tag -d v2 && git push --delete origin v2 && git tag -a v2 -m 'v2' && git push --tags"
  },
  "keywords": [
    "github",
    "actions",
    "dev.to",
    "publish",
    "markdown",
    "assets",
    "articles",
    "sync"
  ],
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/publish-devto",
  "bugs": {
    "url": "https://github.com/sinedied/publish-devto/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.3"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.22.0",
    "xo": "^0.28.1"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node",
      "jest"
    ],
    "rules": {
      "camelcase": [
        "error",
        {
          "allow": [
            "body_markdown",
            "cover_image",
            "published_at"
          ]
        }
      ]
    },
    "ignores": [
      "test/mocks/**/*"
    ]
  },
  "prettier": {
    "bracketSpacing": true
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0",
    "npm": ">=6.0.0"
  }
}
